[Unit]
Description=Elasticserach
Documentation=https://www.elastic.co/guide
After=network.target

[Service]
WorkingDirectory={{ elastic_home }}
ExecStart={{ elastic_home }}/bin/elasticsearch
User={{ elastic_user }}
Group={{ elastic_user }}
Type=simple
Restart=on-failure
RestartSec=5
StartLimitInterval=60s
StartLimitBurst=3

[Install]
WantedBy=multi-user.target